@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var username = Context.Session.GetString("Username") ?? "Técnico";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="text-success">
            <i class="fas fa-tools"></i> Bienvenido/a @username
        </h2>
        <p class="lead">Desde aquí puedes registrar visitantes, capturar fotografías y gestionar las visitas del sistema.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-user-plus fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Registrar Visitante</h5>
                    <p class="card-text">Agrega nuevos visitantes al sistema.</p>
                    <a asp-controller="Visitantes" asp-action="Create" class="btn btn-success">Ir</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-camera fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Capturar Fotografía</h5>
                    <p class="card-text">Accede al módulo de cámara para registrar imágenes.</p>
                    <a asp-controller="Visitantes" asp-action="Index" class="btn btn-success">Ir</a>
                </div>
            </div>
        </div>
    </div>
</div>
